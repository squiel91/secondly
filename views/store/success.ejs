<%- include('../partials/store-head.ejs') %>
<h1>Thanks for your order!</h1>
<p>
  If you have any questions, please email <a href="mailto:buy@secondly.store">buy@secondly.store</a>.
</p>

<div class="row">
  <div class="col-md-6">
    <h3>General</h3>
    <table>
      <tr>
        <th>Name</th>
        <td><%= order.personal.firstName %> <%= order.personal.lastName %></td>
      </tr>
      <tr>
        <th>Email</th>  
        <td><%= order.personal.email %></td>      
      </tr>
      <tr>
        <th>Billed</th>  
        <td>$ <%= order.totalPrice() %></td>      
      </tr>
      <tr>
        <th>Id</th>
        <td><%= order.id %></td>
      </tr>
      <tr>
        <th>Created</th>
        <td><%= order.created.toLocaleDateString("en-US", { month: 'short' , day: "numeric", year: "numeric", hour: 'numeric', minute: 'numeric'}) %></td>
      </tr>
      <tr>
        <th>Status</th>
        <td><%= order.status %></td>
      </tr>
    </table>
  </div>
  <div class="col-md-6">
    <h3>Shippment Address</h3>

    <table>
      <tr>
        <th>Address</th>
        <td><%= order.shipping.address %></td>
      </tr>
      <tr>
        <th>State</th>
        <td><%= order.shipping.state %></td>
      </tr>
      <tr>
        <th>City</th>
        <td><%= order.shipping.city %></td>
      </tr>
      <tr>
        <th>Zip Code</th>
        <td><%= order.shipping.zip %></td>
      </tr>
      <% if (order.shipping.tracking) { %>
        <tr>
          <th>Tracking</th>
          <td><%= order.shipping.tracking %></tr>
      <% } %>
    </table>
  </div>
</div>

<h3>Items</h3>
<table>
  <tr>
    <th>Product</th>
    <th>Quantity</th>
    <th>Unit Price</th>
    <th>Unit Shipping Cost</th>
  </tr>
  <% for (let item of order.items) { %>
    <tr>
      <td><a href="/products/<%= item.originalProduct %>"><%= item.title %></a></td>
      <td><%= item.quantity %></td>
      <td><%= item.unitPrice %></td>
      <td><%= item.unitShippingCost %></td>
    </tr>
  <% } %>
</table>
<%- include('../partials/store-tail.ejs') %>