<%- include('../partials/admin-head.ejs') %>
<h2>Dashboard</h2>
<h3>Last Orders</h3>
<% if (newOrders && newOrders.length > 0) { %>
  <table>
    <tr>
      <th>Customer</th>
      <th>Billed</th>
      <th>City</th>
      <th>Email</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
    <% for (let order of newOrders.reverse()) { %>
      <tr>
        <td><%= order.personal.firstName %> <%= order.personal.lastName %></a></td>
        <td>$ <%= order.totalPrice() %></td>
        <td><%= order.shipping.city %></td>
        <td><%= order.personal.email %></td>
        <td>New</td>
        <td>
          <a href="/admin/orders/<%= order.id %>">
            <button type="submit">
              <svg viewBox="0 0 16 16" width="1em" height="1em" focusable="false" role="img" aria-label="eye" xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi-eye mx-auto b-icon bi" data-v-41be6633=""><g data-v-41be6633=""><path fill-rule="evenodd" d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.134 13.134 0 0 0 1.66 2.043C4.12 11.332 5.88 12.5 8 12.5c2.12 0 3.879-1.168 5.168-2.457A13.134 13.134 0 0 0 14.828 8a13.133 13.133 0 0 0-1.66-2.043C11.879 4.668 10.119 3.5 8 3.5c-2.12 0-3.879 1.168-5.168 2.457A13.133 13.133 0 0 0 1.172 8z"></path><path fill-rule="evenodd" d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"></path></g></svg>
            </button>
          </a>
        </td>
      </tr>
    <% } %>
  </table>
<% } else { %>
  <p>No new order.</p>
<% } %>
<%- include('../partials/admin-tail.ejs') %>